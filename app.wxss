.userInfo {
  display: flex;
  justify-content: center;
  align-items: center; }
  .userInfo .userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    margin-right: 20rpx; }

.title-bar {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 40rpx 30rpx 10rpx 10rpx;
  align-items: center; }
  .title-bar .status {
    flex: 1; }
    .title-bar .status text {
      display: inline-block;
      padding: 10rpx 20rpx;
      margin-right: 20rpx; }
      .title-bar .status text.active {
        color: #38a1e7; }
  .title-bar .add {
    overflow: hidden;
    font-size: 0; }
    .title-bar .add button {
      display: inline-block;
      background-color: #38a1e7; }
      .title-bar .add button:active {
        background-color: #2f89c5; }

.list {
  padding-top: 20rpx; }
  .list .nodata {
    display: block;
    text-align: center;
    margin-top: 50rpx;
    color: #868686; }

.items {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1px solid #eee; }
  .items .icon-small {
    margin-right: 15rpx; }
  .items .title {
    flex: 1; }
    .items .title.over {
      text-decoration: line-through;
      color: #868686; }
  .items .date {
    color: #868686;
    font-size: 13px; }
