.userInfo {
  display: flex;
  justify-content: center;
  align-items: center; }
  .userInfo .userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    margin-right: 20rpx; }

.title-bar {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 40rpx 30rpx 10rpx 10rpx;
  align-items: center; }
  .title-bar .status {
    flex: 1; }
    .title-bar .status text {
      display: inline-block;
      padding: 10rpx 20rpx;
      margin-right: 20rpx; }
      .title-bar .status text.active {
        color: #07c160; }
  .title-bar .add {
    overflow: hidden;
    font-size: 0; }

.list .nodata {
  display: block;
  text-align: center;
  margin-top: 50rpx;
  color: #868686; }

.items {
  border-bottom: 1px solid #eee;
  position: relative; }
  .items-content {
    display: flex;
    align-items: center;
    padding: 25rpx 30rpx;
    position: relative;
    z-index: 10;
    background-color: #fff;
    transition: right .3s ease; }
  .items .icon-small {
    margin-right: 15rpx; }
  .items .title {
    flex: 1; }
    .items .title.over {
      text-decoration: line-through;
      color: #868686; }
  .items .date {
    color: #868686;
    font-size: 13px; }
  .items-delete {
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: #f00;
    color: #fff;
    z-index: 9; }

.addForm {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999; }
  .addForm.hide {
    display: none; }
  .addForm-div {
    background-color: #fff;
    padding: 20rpx 0; }
  .addForm-btn {
    margin-right: 10rpx; }
